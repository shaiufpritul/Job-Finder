@model DevProject.Models.JobPoster

@{
    ViewBag.Title = "DashBoard";
    Layout = null;
}

<h2>DashBoard</h2>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Job Finder</title>
    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/vendors_admin/images/logo.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/vendors_admin/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/vendors_admin/images/favicon-16x16.png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    @Styles.Render("~/Content2/vendor/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content2/vendor/bootstrap-icons/bootstrap-icons.css")
    @Styles.Render("~/Content2/cssassets/vendor/aos/aos.css")
    @Styles.Render("~/Content2/vendor/remixicon/remixicon.css")
    @Styles.Render("~/Content2/vendor/swiper/swiper-bundle.min.css")
    @Styles.Render("~/Content2/vendor/glightbox/css/glightbox.min.css")
    @Styles.Render("~/Content2/css/style.css")
    @Styles.Render("~/Content2/css/profprofile.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a href="#hero" class="logo d-flex align-items-center">
                <img src="~/Content/img/logo.png" alt="">
                <span style="color:chartreuse;">JOB POSTER</span>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" href="#hero">Home</a></li>
                    <li><a class="nav-link scrollto" href="~/JobFinders/JobCircuit2">Look for Jobs</a></li>
                    <li><a class="nav-link scrollto" href="~/Students/Index">Post For Jobs</a></li>
                    <li><a class="nav-link scrollto" href="~/Home/Index/#contact">Contact</a></li>
                    @*<li><a class="nav-link scrollto" href="~/Home/Index/#team"></a></li>*@
                    @*<li><a class="nav-link scrollto " style="margin-left:35px; " href="~/Professors/Profile/">My Profile</a></li>
                        <li><a class="getstarted scrollto" href="~/Home/Index/">Logout</a></li>*@
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header>
    <!-- Header -->
    <!-- Page content -->
    <br><br><br><br><br><br><br>
    <div class="container-fluid mt--7">
        <div class="row">
            <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                <div class="card card-profile shadow">
                    <div class="row justify-content-center">
                        <div class="col-lg-3 order-lg-2">
                            <div class="card-profile-image">
                                <a href="#">
                                    <img src="~/Content/web/images/profile.jpg" class="rounded-circle">
                                </a>

                            </div>
                        </div>
                    </div>

                    <div class="card-body pt-0 pt-md-4">

                        <div class="text-center">
                            <h3>
                                <i class="ni location_pin mr-2"> @Html.DisplayFor(model => model.UserName)</i>

                            </h3>
                            <div class="h5 font-weight-300">
                                <i class="ni location_pin mr-2"> @Html.DisplayFor(model => model.Email)</i>
                            </div>
                            @*<div class="h5 mt-4">
                                    <i class="ni business_briefcase-24 mr-2"></i>@Html.DisplayFor(model => model.Department)
                                </div>
                                <div>
                                    <i class="ni education_hat mr-2"></i>@Html.DisplayFor(model => model.University.UniName)
                                </div>*@
                        </div>
                    </div>
                    @*<div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                            <div class="d-flex ">
                                @Html.ActionLink("Research Paper", "Index", "ProfessorResearchPapers", new { id = Model.ProfID }, new { @class = "btn btn-sm btn-info mr-4" })
                                @Html.ActionLink("Scholarship", "Index", "Scholarships", new { id = Model.ProfID }, new { @class = "btn btn-sm btn-default float-right" })
                                <br>
                                @Html.ActionLink("Add Paper", "Create", "ProfessorResearchPapers", new { id = Model.ProfID }, new { @class = "btn btn-sm btn-info mr-4" })
                                @Html.ActionLink("Add Scholarship", "Create", "Scholarships", new { id = Model.ProfID }, new { @class = "btn btn-sm btn-default float-right" })
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="col-xl-8 order-xl-1">
                <div class="card bg-secondary shadow">
                    <div class="card-header bg-white border-0">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">My account</h3>
                            </div>
                            @*<div class="col-4 text-right">
                                    <a href="#!" class="btn btn-sm btn-primary">Settings</a>
                                </div>*@
                        </div>
                    </div>
                    <div class="card-body">
                        <form>
                            <h6 class="heading-small text-muted mb-4">User Information</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label>Name: </label>
                                            @Html.DisplayFor(model => model.UserName)
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Email: </label>
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label>Contact Number: </label>
                                            @Html.DisplayFor(model => model.ConNumber)
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label>Age: </label>
                                            @Html.DisplayFor(model => model.Age)
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label>Gender: </label>
                                            @Html.DisplayFor(model => model.Gender)
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label>Skills: </label>
                                            @Html.DisplayFor(model => model.Skills)
                                        </div>
                                    </div>

                                </div>


                            </div>
                            <hr class="my-4">
                            <!-- Education -->
                            <h6 class="heading-small text-muted mb-4">Job information</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <label>Job Name: </label>
                                            @Html.DisplayFor(model => model.JobName)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <label>Description: </label>
                                            @Html.DisplayFor(model => model.JobDesc)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <label>Work Days: </label>
                                            @Html.DisplayFor(model => model.WorkDays)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <label>Salary: </label>
                                            @Html.DisplayFor(model => model.Salary)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*<hr class="my-4">
        <h6 class="heading-small text-muted mb-4">Work Related information</h6>

        <hr class="my-4">*@

                            <hr class="my-4">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Vendor JS Files -->
    @Scripts.Render("~/assets2/vendor/bootstrap/js/bootstrap.bundle.js")
    @Scripts.Render("~/assets2/vendor/aos/aos.js")
    @Scripts.Render("~/assets2/vendor/php-email-form/validate.js")
    @Scripts.Render("~/assets2/vendor/swiper/swiper-bundle.min.js")
    @Scripts.Render("~/assets2/vendor/purecounter/purecounter.js")
    @Scripts.Render("~/assets2/vendor/isotope-layout/isotope.pkgd.min.js")
    @Scripts.Render("~/assets2/vendor/glightbox/js/glightbox.min.js")


    <!-- Template Main JS File -->
    @Scripts.Render("~/assets/js/main.js")
    @*@RenderSection("scripts", required: false)*@
</body>
</html>







