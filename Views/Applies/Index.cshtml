@model IEnumerable<DevProject.Models.Apply>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobFinder.UserEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPoster.JobName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobFinder.UserEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobPoster.JobName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ApplyID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ApplyID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ApplyID })
        </td>
    </tr>
}

</table>
