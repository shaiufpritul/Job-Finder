</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Sign Up Details</h2>
                    <form method="POST">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">

                                    @Html.LabelFor(model => model.ApplyName, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="input--style-4">
                                        @Html.EditorFor(model => model.ApplyName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ApplyName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">

                                    @Html.LabelFor(model => model.JobFindID, "JobFindID", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="input--style-4">
                                        @Html.DropDownList("JobFindID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.JobFindID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">

                                    @Html.LabelFor(model => model.JobPostID, "JobPostID", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="input--style-4">
                                        @Html.DropDownList("JobPostID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.JobPostID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>






                        <div class="row row-space">
                            <div class="col-2">

                                <div class="input-group">
                                    <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                                    @*<label class="label">Email</label>
                    <input class="input--style-4" type="email" name="email">*@
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    @Html.ActionLink("Already have an account? Log In", "Login")
                                    @*<label class="label">Phone Number</label>
                    <input class="input--style-4" type="text" name="phone">*@
                                </div>
                            </div>
                        </div>

                        <!--<div class="row row-space">

    <div class="col-2">
        <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>

        <div class=" col-2">-->
                        @*<a class="txt2" href="#">*@
                        <!--@Html.ActionLink("Already have an account? Log In", "Login")-->
                        @*</a>*@
                        <!--</div>

    </div>

    </div>-->



                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/Content/regform/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/Content/regform/vendor/select2/select2.min.js"></script>
    <script src="~/Content/regform/vendor/datepicker/moment.min.js"></script>
    <script src="~/Content/regform/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/Content/regform/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>

